<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.activity.MainActivity">

    <FrameLayout
    android:id="@+id/frame"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_above="@+id/line_bottom" />

    <TextView
        android:id="@+id/line_bottom"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_above="@+id/bottom_container"
        android:background="@color/lineGray" />

    <RadioGroup
        android:paddingTop="5dp"
        android:id="@+id/bottom_container"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_alignParentBottom="true"
        android:background="#ffffff"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/rb_home"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:button="@null"
            android:layout_weight="1"
            android:checked="true"
            android:drawableTop="@drawable/selector_check_main_home"
            android:gravity="center"
            android:paddingTop="5dp"
            android:paddingBottom="10dp"
            android:text="首页"
            android:textColor="@drawable/selector_check_text_blue"
            android:textSize="12dp" />

        <RadioButton
            android:id="@+id/rb_science"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@drawable/selector_check_main_science"
            android:gravity="center"
            android:paddingTop="5dp"
            android:paddingBottom="10dp"
            android:text="科普"
            android:textColor="@drawable/selector_check_text_blue"
            android:textSize="12dp" />

        <RadioButton
            android:id="@+id/rb_course"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@drawable/selector_check_main_course"
            android:gravity="center"
            android:paddingTop="5dp"
            android:paddingBottom="10dp"
            android:text="我的历程"
            android:textColor="@drawable/selector_check_text_blue"
            android:textSize="12dp" />

        <RadioButton
            android:id="@+id/rb_exchange_circle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@drawable/selector_check_main_exchange_circle"
            android:gravity="center"
            android:paddingTop="5dp"
            android:paddingBottom="10dp"
            android:text="交流圈"
            android:textColor="@drawable/selector_check_text_blue"
            android:textSize="12dp" />

        <RadioButton
            android:id="@+id/rb_my"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@drawable/selector_check_main_my"
            android:gravity="center"
            android:paddingTop="5dp"
            android:paddingBottom="10dp"
            android:text="我"
            android:textColor="@drawable/selector_check_text_blue"
            android:textSize="12dp" />

    </RadioGroup>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:paddingTop="5dp"
        android:weightSum="5">
        <ImageView
            android:id="@+id/img_red_point_course"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_gravity="center_horizontal"
            android:layout_weight="5.5"
            android:layout_margin="25dp"
            android:src="@drawable/shape_red_circle_number"
            android:visibility="gone"/>
    </LinearLayout>
</RelativeLayout>
